    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@vanillawc/wc-markdown": "^1.6.10",
    "lit-element": "^2.4.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2",
    "vite": "^2.4.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  }
